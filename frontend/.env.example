# Course Selling Platform - Frontend Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
VITE_API_URL=http://localhost:8765/api

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8765/ws

# =============================================================================
# Application Configuration
# =============================================================================

# Application name displayed in the UI
VITE_APP_NAME=Course Selling Platform

# Application version
VITE_APP_VERSION=1.0.0

# Application environment (development, staging, production)
VITE_APP_ENV=development

# =============================================================================
# Authentication Configuration
# =============================================================================

# JWT token expiration time (in minutes)
VITE_TOKEN_EXPIRY=60

# Refresh token expiration time (in days)
VITE_REFRESH_TOKEN_EXPIRY=7

# =============================================================================
# Payment Configuration
# =============================================================================

# Stripe publishable key (for payment processing)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# PayPal client ID (for PayPal payments)
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# =============================================================================
# Media Configuration
# =============================================================================

# Maximum file upload size (in MB)
VITE_MAX_FILE_SIZE=100

# Supported video formats
VITE_SUPPORTED_VIDEO_FORMATS=mp4,webm,ogg

# Supported image formats
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp,svg

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_LIVE_STREAMING=false

# =============================================================================
# Analytics Configuration
# =============================================================================

# Google Analytics tracking ID
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Hotjar site ID
VITE_HOTJAR_SITE_ID=your_hotjar_id

# =============================================================================
# Social Media Configuration
# =============================================================================

# Social media links
VITE_FACEBOOK_URL=https://facebook.com/yourpage
VITE_TWITTER_URL=https://twitter.com/yourhandle
VITE_LINKEDIN_URL=https://linkedin.com/company/yourcompany
VITE_YOUTUBE_URL=https://youtube.com/yourchannel

# =============================================================================
# CDN Configuration
# =============================================================================

# CDN base URL for static assets
VITE_CDN_URL=https://cdn.yourplatform.com

# Image optimization service URL
VITE_IMAGE_SERVICE_URL=https://images.yourplatform.com

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy nonce
VITE_CSP_NONCE=your_csp_nonce_here

# CORS allowed origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# LogRocket app ID
VITE_LOGROCKET_APP_ID=your_logrocket_app_id

# =============================================================================
# Performance Configuration
# =============================================================================

# Enable service worker for caching
VITE_ENABLE_SERVICE_WORKER=true

# Cache duration for static assets (in seconds)
VITE_CACHE_DURATION=86400

# =============================================================================
# Localization Configuration
# =============================================================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,zh

# =============================================================================
# Email Configuration
# =============================================================================

# Support email address
VITE_SUPPORT_EMAIL=support@yourplatform.com

# Contact email address
VITE_CONTACT_EMAIL=contact@yourplatform.com

# =============================================================================
# Legal Configuration
# =============================================================================

# Terms of service URL
VITE_TERMS_URL=https://yourplatform.com/terms

# Privacy policy URL
VITE_PRIVACY_URL=https://yourplatform.com/privacy

# Cookie policy URL
VITE_COOKIE_POLICY_URL=https://yourplatform.com/cookies