# Jenkins Environment Configuration
# Copy this file to .env and update the values

# Jenkins Configuration
JENKINS_ADMIN_PASSWORD=admin123
JENKINS_URL=http://localhost:8080
JENKINS_ADMIN_EMAIL=admin@course-platform.com
JENKINS_AGENT_SECRET=your-agent-secret-here

# GitHub Configuration
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-personal-access-token

# SonarQube Configuration
SONAR_HOST_URL=http://sonarqube:9000
SONAR_TOKEN=your-sonarqube-token

# Snyk Security Scanning
SNYK_TOKEN=your-snyk-token

# Slack Notifications
SLACK_TOKEN=your-slack-bot-token
SLACK_TEAM_DOMAIN=your-slack-workspace

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin123

# Kubernetes Configuration (for production deployment)
KUBERNETES_SERVER_URL=https://your-k8s-cluster-url
KUBECONFIG_CONTENT=your-base64-encoded-kubeconfig

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_REGISTRY_USERNAME=your-registry-username
DOCKER_REGISTRY_PASSWORD=your-registry-password

# Database Configuration (for SonarQube)
POSTGRES_USER=sonar
POSTGRES_PASSWORD=sonar
POSTGRES_DB=sonar

# Nexus Repository
NEXUS_URL=http://nexus:8081
NEXUS_USERNAME=admin
NEXUS_PASSWORD=admin123

# Performance Testing
K6_CLOUD_TOKEN=your-k6-cloud-token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
PROMETHEUS_RETENTION_TIME=200h
GRAFANA_INSTALL_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# Security
JENKINS_CSRF_PROTECTION=true
JENKINS_AGENT_PROTOCOLS=JNLP4-connect,Ping

# Build Configuration
MAVEN_OPTS=-Xmx2g -Xms1g
NODE_OPTIONS=--max-old-space-size=4096
DOCKER_BUILDKIT=1

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1